<div class="row">
  <div class="col-xs-12">
    <h1>Ingresar Marcas</h1>
  </div>
</div>

<%= render 'form' %>

<div class="row">
  <div class="col-xs-12">
    <table>
      <thead>
        <tr>
          <th>Marcas</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= brand.brand %></td>
            <td class="text-end"><%= link_to 'Editar', edit_brand_path(brand) %> | <%= link_to 'Eliminar', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
