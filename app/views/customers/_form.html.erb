<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= f.number_field :customer_code, :class => 'input-shaptar', :placeholder => 'Código para el Cliente' %>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= f.number_field :nit, :class => 'input-shaptar', :placeholder => 'Nit' %>
    </div>

    <div class="col-xs-12">
      <%= f.text_field :customer_name, :class => 'input-shaptar', :placeholder => 'Nombre del Cliente' %>
    </div>
    <div class="col-xs-12">
      <%= f.text_field :company_name, :class => 'input-shaptar', :placeholder => 'Razón Social' %>
    </div>

    <div class="col-xs-12 col-md-6">
      <%= f.text_field :country, :class => 'input-shaptar', :placeholder => 'País' %>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= f.text_field :department_or_state, :class => 'input-shaptar', :placeholder => 'Departamento o Estado' %>
    </div>

    <div class="col-xs-12">
      <%= f.text_field :address, :class => 'input-shaptar', :placeholder => 'Dirección Completa' %>
    </div>

    <div class="col-xs-12 col-md-3">
      <%= f.number_field :telephone_1, :class => 'input-shaptar', :placeholder => 'Teléfono 1' %>
    </div>
    <div class="col-xs-12 col-md-3">
      <%= f.number_field :telephone_2, :class => 'input-shaptar', :placeholder => 'Teléfono 2' %>
    </div>
    <div class="col-xs-12 col-md-3">
      <%= f.number_field :mobile_1, :class => 'input-shaptar', :placeholder => 'Celular 1' %>
    </div>
    <div class="col-xs-12 col-md-3">
      <%= f.number_field :mobile_2, :class => 'input-shaptar', :placeholder => 'Celular 2' %>
    </div>

    <div class="col-xs-12">
      <%= f.text_field :email, :class => 'input-shaptar', :placeholder => 'Correo Electrónico' %>
    </div>

    <div class="col-xs-12">
      <%= f.text_field :web_page, :class => 'input-shaptar', :placeholder => 'Página Web' %>
    </div>

    <div class="col-xs-9 col-md-10 col-lg-11">
      <%= f.collection_select :transportation, Transportation.all, :id, :transportation, :prompt => "Seleccionar Transporte" %>
    </div>
    <div class="col-xs-3 col-md-2 col-lg-1">
      <!-- Button trigger modal -->
      <button type="button" class="button-shaptar-blue" data-toggle="modal" data-target="#myModal">+</button>
      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title" id="myModalLabel">Transporte</h4>
            </div>
            <div class="modal-body">
              <div class="row">
                <div class="col-xs-12">
                  <input type="text" class="input-shaptar" placeholder="Ingresar Transporte">
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
              <button type="button" class="btn btn-primary">Guardar Transporte</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon">Q</span>
        <%= f.text_field :credit_in_quetzales, :class => 'form-control', :placeholder => 'Crédito en Quetzales' %>
        <span class="input-group-addon">.00</span>
      </div>
    </div>

    <div class="col-xs-12">
      <%= f.number_field :discount_percentage, :class => 'input-shaptar', :placeholder => 'Porcentaje en Descuento' %>
    </div>

    <div class="col-xs-12">
      <%= f.text_area :observations, :class => 'textarea-shaptar', :placeholder => 'Observaciones' %>
    </div>
  </div>

  <br>

  <div class="row flex-items-xs-right">
    <div class="col-xs-12 col-lg-3">
      <%= f.submit 'Publicar Cliente', :class => 'button-shaptar-green' %>
    </div>
  </div>

<% end %>
