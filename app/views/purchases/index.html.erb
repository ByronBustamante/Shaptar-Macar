<p id="notice"><%= notice %></p>

<h1>Listing Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Supplier code</th>
      <th>Invoice series</th>
      <th>Invoice number</th>
      <th>Purchase date</th>
      <th>Total purchase</th>
      <th>Observations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.supplier_code %></td>
        <td><%= purchase.invoice_series %></td>
        <td><%= purchase.invoice_number %></td>
        <td><%= purchase.purchase_date %></td>
        <td><%= purchase.total_purchase %></td>
        <td><%= purchase.observations %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

