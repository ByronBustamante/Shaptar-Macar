<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Product code</th>
      <th>Barcode</th>
      <th>Product name</th>
      <th>Description</th>
      <th>Purchase date</th>
      <th>Cost in quetzales</th>
      <th>Sale price</th>
      <th>Percentage in sale</th>
      <th>Number of articles</th>
      <th>Name supplier</th>
      <th>Name brand</th>
      <th>Name family</th>
      <th>Name location in warehouse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_code %></td>
        <td><%= product.barcode %></td>
        <td><%= product.product_name %></td>
        <td><%= product.description %></td>
        <td><%= product.purchase_date %></td>
        <td><%= product.cost_in_quetzales %></td>
        <td><%= product.sale_price %></td>
        <td><%= product.percentage_in_sale %></td>
        <td><%= product.number_of_articles %></td>
        <td><%= product.name_supplier %></td>
        <td><%= product.name_brand %></td>
        <td><%= product.name_family %></td>
        <td><%= product.name_location_in_warehouse %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

