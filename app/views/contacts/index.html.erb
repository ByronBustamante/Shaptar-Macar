<div class="row">
  <div class="col-xs-12">
    <h1>Mensajes</h1>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Teléfono</th>
      <th>Correo Electrónico</th>
      <th>Fecha de Recibido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.telephone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.created_at %></td>
        <td class="text-end"><%= link_to 'Ver Correo', contact %> | <%= link_to 'Eliminar', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
